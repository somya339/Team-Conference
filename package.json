{
  "name": "nexusmeet",
  "version": "1.0.0",
  "description": "NexusMeet - Modern video conferencing application",
  "private": true,
  "scripts": {
    "build:web": "turbo run build --filter=nexusmeet-web",
    "build:server": "turbo run build --filter=nexusmeet-server",
    "dev:web": "turbo run dev --filter=nexusmeet-web",
    "dev:server": "turbo run dev --filter=nexusmeet-server",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "keywords": ["video-conferencing", "webrtc", "react", "nest", "real-time"],
  "bugs": {
    "url": "https://github.com/your-username/nexusmeet/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nexusmeet.git"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://nexusmeet.app",
  "engines": {
    "node": "18.19.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
